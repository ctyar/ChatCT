<Window x:Class="ChatCT.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatCT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="Username">Username</TextBox>
        <TextBox Name="AccessToken">Access token</TextBox>
        <TextBox Name="Channel">Channel</TextBox>
        <Button Name="Connect">Connect</Button>
        <Button Name="Disconnect" IsEnabled="False">Disconnect</Button>
        <ListBox Name="ChatBox" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="300">
        </ListBox>
    </StackPanel>
</Window>
